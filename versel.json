{
  "functions": {
    "api/*.py": {
      "runtime": "python3.9",
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/games", "dest": "/public/games.html" },
    { "src": "/profile", "dest": "/public/profile.html" },
    { "src": "/admin", "dest": "/public/admin.html" },
    { "src": "/api/(.*)", "dest": "/api/$1.py" },
    { "src": "/static/(.*)", "dest": "/public/$1" }
  ],
  "env": {
    "PYTHONPATH": "/var/task/api"
  }
}
